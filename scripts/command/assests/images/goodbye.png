const fs = require("fs");
const { createCanvas, registerFont } = require("canvas");

// Font setup
registerFont("./assets/fonts/Meheraz-Regular.ttf", { family: "Meheraz" });
registerFont("./assets/fonts/Mirai-Soft.otf", { family: "Mirai" });

// Canvas size
const width = 1000;
const height = 500;
const canvas = createCanvas(width, height);
const ctx = canvas.getContext("2d");

// Background gradient (soft purple + dark blue)
const gradient = ctx.createLinearGradient(0, 0, width, height);
gradient.addColorStop(0, "#0a001a");
gradient.addColorStop(1, "#4b0099");
ctx.fillStyle = gradient;
ctx.fillRect(0, 0, width, height);

// Border glow
ctx.shadowColor = "#ff33cc";
ctx.shadowBlur = 25;
ctx.strokeStyle = "#ff66ff";
ctx.lineWidth = 5;
ctx.strokeRect(20, 20, width - 40, height - 40);

// Main text
