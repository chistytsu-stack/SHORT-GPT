ctx.shadowBlur = 0;
ctx.fillStyle = "#ffb3ff";
ctx.fillText("ğŸ’« We'll miss your vibe here!", width / 2, height / 2 + 40);

// Credit text
ctx.font = "20px Mirai";
ctx.fillStyle = "#ff99ff";
ctx.fillText("âš¡ Powered by Meheraz", width / 2, height - 40);

// Save file
const buffer = canvas.toBuffer("image/png");
fs.mkdirSync("./assets/images", { recursive: true });
fs.writeFileSync("./assets/images/goodbye.png", buffer);

